{
  "manifest_version": 3,
  "name": "Emoji Copy Shortcut",
  "version": "1.0",
  "description": "Upload your own emojis and copy them to your clipboard with a click.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/Happy-TikTok-Emoji.png"
    }
  },
  "icons": {
    "16": "icons/Happy-TikTok-Emoji.png",
    "32": "icons/Proud-TikTok-Emoji.png",
    "48": "icons/Excited-TikTok-Emoji.png",
    "128": "icons/Excited-TikTok-Emoji.png"
  },
  "permissions": [
    "storage",
    "clipboardWrite"
  ]
}
